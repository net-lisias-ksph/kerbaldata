        <Label Content="Games" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Content="Scenarios" HorizontalAlignment="Left" Margin="167,38,0,0" VerticalAlignment="Top" Width="95"/>
